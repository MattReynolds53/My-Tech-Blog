<div class="text-center">
  <article class="card">
    <div class="">
      <h2>{{name}}</h2>
      <div>
        Posted by {{user.name}} on {{format_date date_created}}
      </div>
    </div>
    <div class="card-body">
      {{description}}
    </div>
  </article>


{{#if body}}
    <section class="card">
      <div class="card-header">
        <h3>Comments</h3>
      </div>

      <div class="card-body">
        {{#each comments as |comment|}}
          <div>
            <p>
              {{body}}
            </p>
            <p>
              &mdash; {{comment.user.name}}, {{format_date createdAt}}
            </p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}

<form id="new-comment-form" class="card">
    <div class="card-header">
      <h3>Add New Comment</h3>
    </div>

    <div class="card-body">
      <input type="hidden" name="post-id" value="{{id}}" />

      <label class="form-label" for="comment-body">Comment</label>

      <textarea name="comment-body" class="form-input"></textarea>

      <button type="submit" class="btn">Submit</button>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>